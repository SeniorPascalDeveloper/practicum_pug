colorText = #6f6d6d

back(size)
  background-color #f1f1f1
  box-shadow 4px 5px 10px rgba(0,0,0,0.4)
  padding size + "%"
  margin 0 0 1% 0

html
  color colorText

body
  margin 0
  font-family Arial, sans-serif

header
  back(1)

nav
  back(0)
  text-align right

nav a
  display inline-block
  padding 1%
  color colorText
  text-decoration none

nav a:hover,
nav a.active
  background-color #f87777
  color #f8f8f8

div.images
  display grid
  grid-template-columns repeat(5, 1fr)
  grid-gap 0.5%
  back(1)

div.images img
  width 100%

article
  width 80%
  margin auto
  display grid
  grid-template-columns repeat(3, 1fr)
  grid-gap 4%

article section
  display grid
  grid-template-columns 1fr 2fr
  grid-gap 2%
  align-items center
  back(2)

article h3
  grid-column 1/3
  margin 0
  text-align center

article img
  width 100%

footer
  background-color colorText

footer h4
  padding 5px
  color #f8f8f8


// ---------- Стили для building (как в задании 2 / рис. 5) ----------
img.big
  display block
  width 80%
  max-width 900px
  margin 1% auto
  back(1)

section.buildingText
  width 80%
  margin 0 auto 2% auto
  display grid
  grid-template-columns 1fr 1fr
  gap 2%
  back(2)

section.buildingText p
  margin 0
  line-height 1.4


// ---------- Медиа-запросы (< 650px) ----------
@media (max-width: 650px)
  div.images
    grid-template-columns repeat(2, 1fr)

  article
    grid-template-columns 1fr

  article section
    grid-template-columns 1fr

  article h3
    grid-column 1/2

  section.buildingText
    grid-template-columns 1fr
